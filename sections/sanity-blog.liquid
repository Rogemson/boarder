<div class="sanity-blog">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div id="blog-posts" class="blog-grid">
      <p>Loading posts...</p>
    </div>
  </div>
</div>

<script>
const PROJECT_ID = '{{ section.settings.project_id }}';
const DATASET = 'production';

if (!PROJECT_ID || PROJECT_ID === '') {
  document.getElementById('blog-posts').innerHTML = '<p>Please add your Sanity Project ID in theme settings</p>';
} else {
  const query = `*[_type == "post"] | order(publishedAt desc)[0..5] {
    title,
    "slug": slug.current,
    publishedAt,
    excerpt,
    "image": mainImage.asset->url,
    "authorName": author->name
  }`;

  const url = `https://${PROJECT_ID}.api.sanity.io/v2021-10-21/data/query/${DATASET}?query=${encodeURIComponent(query)}`;

  fetch(url)
    .then(res => res.json())
    .then(data => {
      const container = document.getElementById('blog-posts');
      const posts = data.result || [];
      
      if (posts.length === 0) {
        container.innerHTML = '<p>No blog posts yet. Check back soon!</p>';
        return;
      }
      
      container.innerHTML = posts.map(post => {
        const date = new Date(post.publishedAt).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });
        
        return `
          <div class="blog-card">
            ${post.image ? `
              <div class="blog-card__image">
                <img src="${post.image}?w=600&h=400&fit=crop&auto=format" alt="${post.title}" loading="lazy">
              </div>
            ` : ''}
            <div class="blog-card__content">
              <p class="blog-card__date">${date}</p>
              <h3 class="blog-card__title">${post.title}</h3>
              ${post.excerpt ? `<p class="blog-card__excerpt">${post.excerpt}</p>` : ''}
              ${post.authorName ? `<p class="blog-card__author">by ${post.authorName}</p>` : ''}
            </div>
          </div>
        `;
      }).join('');
    })
    .catch(err => {
      console.error('Error fetching Sanity posts:', err);
      document.getElementById('blog-posts').innerHTML = '<p>Error loading posts. Please check your Project ID.</p>';
    });
}
</script>

<style>
.sanity-blog {
  padding: var(--space-32, 40px) var(--space-16, 20px);
  background-color: var(--color-background, #fff);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.sanity-blog h2 {
  text-align: center;
  font-size: 32px;
  font-weight: 600;
  margin-bottom: 40px;
  color: var(--color-text, #000);
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 24px;
  margin-top: 20px;
}

.blog-card {
  background: var(--color-surface, #fff);
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid #e5e5e5;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.blog-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
}

.blog-card__image {
  width: 100%;
  height: 240px;
  overflow: hidden;
  background: #f5f5f5;
}

.blog-card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.blog-card__content {
  padding: 20px;
}

.blog-card__date {
  font-size: 14px;
  color: #666;
  margin: 0 0 8px 0;
}

.blog-card__title {
  font-size: 20px;
  font-weight: 600;
  margin: 0 0 12px 0;
  color: var(--color-text, #000);
}

.blog-card__excerpt {
  font-size: 15px;
  color: #555;
  line-height: 1.6;
  margin: 0 0 12px 0;
}

.blog-card__author {
  font-size: 14px;
  color: #888;
  margin: 0;
  font-style: italic;
}

@media (max-width: 768px) {
  .blog-grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Sanity Blog",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest from Our Blog"
    },
    {
      "type": "text",
      "id": "project_id",
      "label": "Sanity Project ID",
      "info": "Your Sanity project ID (found in Sanity dashboard)"
    }
  ],
  "presets": [
    {
      "name": "Sanity Blog"
    }
  ]
}
{% endschema %}
